{
  "$schema": "http://schema.management.azure.com/schemas/2014-04-01-preview/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "administratorLogin": {
      "type": "string",
      "minLength":1,
      "maxLength":16
    },
    "administratorLoginPassword": {
      "type": "securestring"
    },
    "location": {
      "type":"string",
      "allowedValues":[
        "East Asia",
        "East US 2",
        "East US",
        "Japan East",
        "Japan West",
        "North Central US",
        "North Europe",
        "South Central US",
        "Southeast Asia",
        "West Europe",
        "West US",
        "UK South"
      ],
      "defaultValue":"UK South"
    },
    "serverName": {
      "type": "string",
      "minLength":2,
      "maxLength":63
    },
    "skuCapacity": {
      "type":"int",
      "defaultValue": 2
    },
    "skuFamily": {
      "type":"string",
      "allowedValues":[
        "Gen5"
      ],
      "defaultValue":"Gen5"
    },
    "skuName": {
      "type":"string",
      "allowedValues":[
        "B_Gen5_1",
        "B_Gen5_2",
        "GP_Gen5_2",
        "GP_Gen5_4",
        "GP_Gen5_8",
        "GP_Gen5_16",
        "GP_Gen5_32",
        "MO_Gen5_2",
        "MO_Gen5_4",
        "MO_Gen5_8",
        "MO_Gen5_16",
        "MO_Gen5_32"
      ],
      "defaultValue":"GP_Gen5_2"
    },
    "skuSizeMB": {
      "type":"string",
      "defaultValue":"51200"
    },
    "skuTier": {
      "type":"string",
      "allowedValues":[
        "Basic",
        "GeneralPurpose",
        "MemoryOptimized"
      ],
      "defaultValue":"GeneralPurpose"
    },
    "version": {
      "type":"string",
      "allowedValues":[
        "9.5",
        "9.6",
        "10"
      ],
      "defaultValue":"9.6"
    },
    "backupRetentionDays": {
      "type": "string",
      "defaultValue": 7
    },
    "geoRedundantBackup": {
      "type": "string",
      "defaultValue": "Enabled"
    },
    "sslEnforcement": {
      "type": "string",
      "defaultValue": "Enabled"
    },
    "env": {
      "type": "string",
      "metadata": {
        "description": "The tag"
      }
    },
    "dbName": {
      "type": "string"
    },
    "charset": {
      "type": "string"
    },

    "collation": {
      "type": "string"
    },
    "AseVnetRuleName": {
      "type": "string"
    },
    "AseSubnetId": {
      "type": "string"
    },
    "Asev2VnetRuleName": {
      "type": "string"
    },
    "Asev2SubnetId": {
      "type": "string",
      "defaultValue": "null"
    },
    "isAseV2Present": {
      "type": "string",
      "allowedValues": [
        "true",
        "false"
      ]
    },
    "JenkinsVnetRuleName": {
      "type": "string"
    },
    "JenkinsSubnetId": {
      "type": "string"
    },
    "BastionVnetRuleName": {
      "type": "string"
    },
    "BastionSubnetId": {
      "type": "string"
    }
  },
  "resources": [
    {
      "apiVersion": "2017-12-01-preview",
      "kind": "",
      "location": "[parameters('location')]",
      "name": "[parameters('serverName')]",
      "properties": {
        "version": "[parameters('version')]",
        "administratorLogin": "[parameters('administratorLogin')]",
        "administratorLoginPassword": "[parameters('administratorLoginPassword')]",
        "sslEnforcement": "[parameters('sslEnforcement')]",
        "storageProfile": {
          "storageMB": "[parameters('skuSizeMB')]",
          "backupRetentionDays": "[int(parameters('backupRetentionDays'))]",
          "geoRedundantBackup": "[parameters('geoRedundantBackup')]"
        }
      },
      "sku": {
        "name": "[parameters('skuName')]",
        "tier": "[parameters('skuTier')]",
        "capacity": "[parameters('skuCapacity')]",
        "size": "[parameters('skuSizeMB')]",
        "family": "[parameters('skuFamily')]"
      },
      "type": "Microsoft.DBforPostgreSQL/servers",
      "resources":[
        {
          "type": "virtualNetworkRules",
          "apiVersion": "2017-12-01-preview",
          "dependsOn": [
            "[concat('Microsoft.DBforPostgreSQL/servers/', parameters('serverName'))]"
          ],
          "name":"[parameters('AseVnetRuleName')]",
          "location": "[parameters('location')]",
          "properties": {
            "ignoreMissingVnetServiceEndpoint": true,
            "virtualNetworkSubnetId":"[parameters('AseSubnetId')]"
          }
        },
        {
          "type": "virtualNetworkRules",
          "apiVersion": "2017-12-01-preview",
          "condition": "[equals(parameters('isAseV2Present'),'true')]",
          "dependsOn": [
            "[concat('Microsoft.DBforPostgreSQL/servers/', parameters('serverName'))]"
          ],
          "name": "[parameters('Asev2VnetRuleName')]",
          "location": "[parameters('location')]",
          "properties": {
            "ignoreMissingVnetServiceEndpoint": true,
            "virtualNetworkSubnetId": "[parameters('Asev2SubnetId')]"
          }
        },
        {
          "type": "virtualNetworkRules",
          "apiVersion": "2017-12-01-preview",
          "dependsOn": [
            "[concat('Microsoft.DBforPostgreSQL/servers/', parameters('serverName'))]"
          ],
          "name": "[parameters('JenkinsVnetRuleName')]",
          "location": "[parameters('location')]",
          "properties": {
            "ignoreMissingVnetServiceEndpoint": true,
            "virtualNetworkSubnetId": "[parameters('JenkinsSubnetId')]"
          }
        },
        {
          "type": "virtualNetworkRules",
          "apiVersion": "2017-12-01-preview",
          "dependsOn": [
            "[concat('Microsoft.DBforPostgreSQL/servers/', parameters('serverName'))]"
          ],
          "name": "[parameters('BastionVnetRuleName')]",
          "location": "[parameters('location')]",
          "properties": {
            "ignoreMissingVnetServiceEndpoint": true,
            "virtualNetworkSubnetId": "[parameters('BastionSubnetId')]"
          }
        },

        {
          "name": "[parameters('dbName')]",
          "type": "databases",
          "apiVersion": "2017-12-01-preview",
          "properties": {
            "charset": "[parameters('charset')]",
            "collation": "[parameters('collation')]"
          },
          "dependsOn": [
            "[concat('Microsoft.DBforPostgreSQL/servers/', parameters('serverName'))]"
          ]
        }
      ]
    }
  ],
  "variables": {}
}
